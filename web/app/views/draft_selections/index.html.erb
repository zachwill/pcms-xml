<% content_for :title, "Draft selections" %>

<%
  initial_overlay_type = @initial_overlay_type.to_s.presence || "none"
  initial_overlay_id = @initial_overlay_id.to_s

  pane_query_expr = "'q=' + encodeURIComponent($draftselectionquery) +
    '&year=' + encodeURIComponent($draftselectionyear) +
    '&round=' + encodeURIComponent($draftselectionround) +
    '&team=' + encodeURIComponent($draftselectionteam) +
    '&sort=' + encodeURIComponent($draftselectionsort) +
    '&lens=' + encodeURIComponent($draftselectionlens)"

  refresh_query_expr = "(#{pane_query_expr}) +
    '&selected_id=' + encodeURIComponent($overlayid)"

  refresh_expr = "@get('/draft-selections/sse/refresh?' + (#{refresh_query_expr})); window.history.replaceState({}, '', '/draft-selections?' + (#{pane_query_expr}))"

  signals_literal = "{ draftselectionquery: #{@query.to_json}, draftselectionyear: #{@year_lens.to_json}, draftselectionround: #{@round_lens.to_json}, draftselectionteam: #{@team_lens.to_json}, draftselectionsort: #{@sort.to_json}, draftselectionlens: #{@lens.to_json}, overlaytype: #{initial_overlay_type.to_json}, overlayid: #{initial_overlay_id.to_json} }"

  severity_snapshot = @workspace_severity_snapshot.is_a?(Hash) ? @workspace_severity_snapshot : {}
  clean_count = severity_snapshot[:clean_count].to_i
  with_trade_count = severity_snapshot[:with_trade_count].to_i
  deep_chain_count = severity_snapshot[:deep_chain_count].to_i
  contested_count = severity_snapshot[:contested_count].to_i

  lens_focus = severity_snapshot[:lens_focus].is_a?(Hash) ? severity_snapshot[:lens_focus] : {}
  lens_focus_label = lens_focus[:label].to_s.presence || "All severity lanes"
  lens_focus_note = lens_focus[:note].to_s.presence || "Clean and contested rows are both in scope."
%>

<div id="draft-selections-workspace" class="h-screen w-full flex flex-col overflow-hidden bg-background" style="height: 100dvh;" data-signals="<%= signals_literal %>">
  <div id="flash"></div>

  <header id="commandbar" class="shrink-0 h-[130px] border-b border-border bg-background px-4 pt-3 flex items-start gap-4 select-none">
    <div class="flex items-start min-w-0 overflow-x-auto pb-1">
      <div class="min-w-[14rem] w-[14rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Search</div>
        <div class="flex items-center gap-1.5">
          <input
            type="text"
            value="<%= @query %>"
            placeholder="Player, team, pick, transaction"
            class="h-7 w-full rounded border border-border bg-background px-2 text-xs text-foreground"
            data-bind="draftselectionquery"
            data-on:keydown="if (evt.key === 'Enter') { evt.preventDefault(); <%= refresh_expr %>; }"
          />
          <button
            type="button"
            class="cursor-pointer h-7 shrink-0 rounded border border-border bg-muted/30 px-2 text-[11px] text-foreground hover:bg-muted"
            data-on:click="<%= refresh_expr %>"
          >Apply</button>
        </div>
        <div class="text-[10px] text-muted-foreground/80 truncate">
          <span class="uppercase tracking-wide text-muted-foreground/70">Focus</span>
          <span class="px-1 text-muted-foreground/50">·</span>
          <span><%= lens_focus_label %></span>
        </div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0 mx-3"></div>

      <div class="min-w-[7rem] w-[7rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Year</div>
        <select
          id="draft-selections-year-select"
          class="h-7 w-24 rounded border border-border bg-background px-2 text-xs text-foreground font-mono tabular-nums"
          data-bind="draftselectionyear"
          data-on:change="<%= refresh_expr %>"
        >
          <% Array(@year_options).each do |year| %>
            <option value="<%= year %>" <%= "selected" if @year_lens.to_s == year.to_s %>><%= year %></option>
          <% end %>
        </select>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0 mx-3"></div>

      <div class="min-w-[6.5rem] w-[6.5rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Round</div>
        <div class="space-y-1">
          <% [["all", "All"], ["1", "1st"], ["2", "2nd"]].each do |value, label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                name="draft-selection-round"
                value="<%= value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @round_lens == value %>
                data-bind="draftselectionround"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $draftselectionround === '<%= value %>', 'text-muted-foreground': $draftselectionround !== '<%= value %>' }"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0 mx-3"></div>

      <div class="min-w-[13rem] w-[13rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Sort</div>
        <select
          id="draft-selections-sort-select"
          class="h-7 w-full rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="draftselectionsort"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="board" <%= "selected" if @sort == "board" %>>Board order (round/pick)</option>
          <option value="trade" <%= "selected" if @sort == "trade" %>>With trade first</option>
          <option value="provenance" <%= "selected" if @sort == "provenance" %>>Deepest provenance chain</option>
        </select>
      </div>

      <div class="min-w-[12rem] w-[12rem] space-y-1 ml-3">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Provenance lens</div>
        <select
          id="draft-selections-lens-select"
          class="h-7 w-full rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="draftselectionlens"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="all" <%= "selected" if @lens == "all" %>>All severity lanes</option>
          <option value="with_trade" <%= "selected" if @lens == "with_trade" %>>Contested only</option>
          <option value="deep_chain" <%= "selected" if @lens == "deep_chain" %>>Deep-contested only (P2+)</option>
        </select>
      </div>

      <div class="min-w-[11rem] w-[11rem] space-y-1 ml-3">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Drafting team</div>
        <select
          id="draft-selections-team-select"
          class="h-7 w-full rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="draftselectionteam"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="" <%= "selected" if @team_lens.blank? %>>All teams</option>
          <% Array(@team_options).each do |team| %>
            <% code = team["team_code"].to_s.upcase %>
            <option value="<%= code %>" <%= "selected" if @team_lens == code %>><%= code %> · <%= team["team_name"] %></option>
          <% end %>
        </select>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0 mx-3"></div>

      <div class="min-w-[16rem] w-[16rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Severity lanes</div>
        <div class="text-[11px] text-muted-foreground leading-tight"><%= lens_focus_note %></div>
        <div class="flex flex-wrap items-center gap-1 text-[10px] text-muted-foreground">
          <span class="entity-chip entity-chip--danger">Deep <span class="font-mono tabular-nums"><%= deep_chain_count %></span></span>
          <span class="entity-chip entity-chip--warning">With trade <span class="font-mono tabular-nums"><%= with_trade_count %></span></span>
          <span class="entity-chip entity-chip--muted">Clean <span class="font-mono tabular-nums"><%= clean_count %></span></span>
        </div>
        <div class="text-[10px] text-muted-foreground/80 tabular-nums">Contested: <span class="text-foreground"><%= contested_count %></span></div>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center ml-auto shrink-0"></div>
    <%= render partial: "shared/commandbar_navigation", locals: { active_destination: "draft_selections" } %>
  </header>

  <div id="viewport" class="flex flex-1 overflow-hidden relative">
    <main id="maincanvas" class="flex-1 min-w-0 min-h-0 overflow-y-auto overflow-x-hidden bg-background relative overscroll-y-contain scroll-touch isolate">
      <%= render partial: "draft_selections/workspace_main" %>
    </main>

    <aside
      id="rightpanel"
      class="w-[30%] min-w-[320px] max-w-[480px] min-h-0 border-l border-border bg-background overflow-hidden relative"
    >
      <div
        id="rightpanel-base-layer"
        class="absolute inset-0 overflow-y-auto overflow-x-hidden overscroll-y-contain scroll-touch pt-2 px-4 pb-4 transition-opacity duration-300"
      >
        <%= render partial: "draft_selections/rightpanel_base" %>
      </div>

      <% if @initial_overlay_partial.present? %>
        <%= render partial: @initial_overlay_partial, locals: (@initial_overlay_locals || {}) %>
      <% else %>
        <div id="rightpanel-overlay"></div>
      <% end %>
    </aside>
  </div>
</div>
