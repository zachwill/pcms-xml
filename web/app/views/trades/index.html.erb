<% content_for :title, "Trades" %>

<%
  pane_query_expr = "'daterange=' + encodeURIComponent($tradedaterange) +
    '&team=' + encodeURIComponent($tradeteam) +
    '&sort=' + encodeURIComponent($tradesort) +
    '&lens=' + encodeURIComponent($tradelens) +
    '&composition=' + encodeURIComponent($tradecomposition)"

  refresh_loader_expr = "const paneQuery = (#{pane_query_expr}); if ($_tradesrefreshpanequery !== paneQuery) { $_tradesrefreshpanequery = paneQuery; const refreshQuery = paneQuery + '&selected_type=' + encodeURIComponent($overlaytype || '') + '&selected_id=' + encodeURIComponent($overlayid || ''); @get('/trades/sse/refresh?' + refreshQuery); const nextUrl = '/trades?' + paneQuery; if ((window.location.pathname + window.location.search) !== nextUrl) { window.history.replaceState({}, '', nextUrl); } }"

  initial_pane_query = {
    daterange: @daterange.to_s,
    team: (@team || "").to_s,
    sort: @sort.to_s,
    lens: @lens.to_s,
    composition: @composition.to_s
  }.to_query

  reset_filters_expr = "$tradedaterange = 'season'; $tradeteam = ''; $tradesort = 'newest'; $tradelens = 'all'; $tradecomposition = 'all';"

  signals_literal = "{ tradedaterange: #{@daterange.to_json}, tradeteam: #{(@team || '').to_json}, tradesort: #{@sort.to_json}, tradelens: #{@lens.to_json}, tradecomposition: #{@composition.to_json}, overlaytype: '', overlayid: '', _tradesrefreshpanequery: #{initial_pane_query.to_json} }"
%>

<div id="trades-workspace" class="h-screen w-full flex flex-col overflow-hidden bg-background" style="height: 100dvh;" data-signals="<%= signals_literal %>">
  <div id="flash"></div>

  <div
    id="trades-refresh-loader"
    class="hidden"
    aria-hidden="true"
    data-effect="<%= refresh_loader_expr %>"
  ></div>

  <header
    id="commandbar"
    class="shrink-0 h-[130px] border-b border-border bg-background px-4 pt-3 flex items-start gap-4 select-none"
  >
    <div class="flex items-start min-w-0 overflow-x-auto pb-1 gap-4" role="group" aria-label="Trades filters">
      <div class="min-w-[8.5rem] w-[8.5rem] space-y-1.5">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Date range</div>
        <div class="space-y-1">
          <% [["today", "Today"], ["week", "This Week"], ["month", "This Month"], ["season", "This Season"], ["all", "All Dates"]].each do |value, label| %>
            <label class="flex items-center gap-1.5 cursor-pointer select-none">
              <input
                type="radio"
                name="trade-daterange"
                value="<%= value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @daterange == value %>
                data-bind="tradedaterange"
              />
              <span class="text-[11px] leading-none" data-class="{ 'text-foreground font-semibold': $tradedaterange === '<%= value %>', 'text-muted-foreground': $tradedaterange !== '<%= value %>' }"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0"></div>

      <div class="min-w-[13rem] w-[13rem] space-y-2">
        <div class="space-y-1">
          <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Team scope</div>
          <select
            id="trades-team-select"
            class="h-7 w-full rounded border border-border bg-muted/50 px-2 text-xs text-foreground"
            data-bind="tradeteam"
          >
            <option value="" <%= "selected" if @team.blank? %>>All teams</option>
            <% Array(@team_options).each do |team| %>
              <% code = team["team_code"].to_s.upcase %>
              <option value="<%= code %>" <%= "selected" if @team == code %>><%= code %> Â· <%= team["team_name"] %></option>
            <% end %>
          </select>
        </div>

        <div class="space-y-1">
          <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Sort</div>
          <div class="space-y-1">
            <% [["newest", "Newest"], ["most_teams", "Most teams"], ["most_assets", "Most assets"]].each do |value, label| %>
              <label class="flex items-center gap-1.5 cursor-pointer select-none">
                <input
                  type="radio"
                  name="trade-sort"
                  value="<%= value %>"
                  class="size-3.5 accent-primary"
                  <%= "checked" if @sort == value %>
                  data-bind="tradesort"
                />
                <span class="text-[11px] leading-none" data-class="{ 'text-foreground font-semibold': $tradesort === '<%= value %>', 'text-muted-foreground': $tradesort !== '<%= value %>' }"><%= label %></span>
              </label>
            <% end %>
          </div>
        </div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0"></div>

      <div class="min-w-[11rem] w-[11rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Complexity lens</div>
        <div class="space-y-1">
          <% [["all", "All deals"], ["complex", "3+ teams / 4+ assets"], ["mega", "4+ teams / 6+ assets"]].each do |value, label| %>
            <label class="flex items-center gap-1.5 cursor-pointer select-none">
              <input
                type="radio"
                name="trade-lens"
                value="<%= value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @lens == value %>
                data-bind="tradelens"
              />
              <span class="text-[11px] leading-none" data-class="{ 'text-foreground font-semibold': $tradelens === '<%= value %>', 'text-muted-foreground': $tradelens !== '<%= value %>' }"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0"></div>

      <div class="min-w-[10.5rem] w-[10.5rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Composition</div>
        <div class="space-y-1">
          <% [["all", "All archetypes"], ["player_heavy", "Player-heavy"], ["pick_heavy", "Pick-heavy"], ["cash_tpe", "Cash / TPE"]].each do |value, label| %>
            <label class="flex items-center gap-1.5 cursor-pointer select-none">
              <input
                type="radio"
                name="trade-composition"
                value="<%= value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @composition == value %>
                data-bind="tradecomposition"
              />
              <span class="text-[11px] leading-none" data-class="{ 'text-foreground font-semibold': $tradecomposition === '<%= value %>', 'text-muted-foreground': $tradecomposition !== '<%= value %>' }"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0"></div>

      <div class="min-w-[11rem] w-[11rem] space-y-2">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Context</div>

        <div class="flex flex-wrap gap-1 text-[10px]">
          <span class="entity-chip entity-chip--muted" data-text="$tradeteam ? ('Team ' + $tradeteam) : 'League-wide'"></span>
          <span class="entity-chip entity-chip--muted" data-text="$tradedaterange === 'all' ? 'All dates' : ($tradedaterange === 'season' ? 'This season' : ($tradedaterange === 'month' ? 'This month' : ($tradedaterange === 'week' ? 'This week' : 'Today'))) "></span>
          <span class="entity-chip entity-chip--muted" data-text="$tradesort === 'newest' ? 'Newest first' : ($tradesort === 'most_teams' ? 'Most teams first' : 'Most assets first')"></span>
        </div>

        <button
          type="button"
          class="cursor-pointer h-6 px-2 rounded border border-border bg-muted/50 text-[10px] uppercase tracking-wide text-muted-foreground hover:text-foreground hover:border-foreground/20"
          data-on:click="<%= reset_filters_expr %>"
        >Reset filters</button>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center ml-auto shrink-0"></div>
    <%= render partial: "shared/commandbar_navigation", locals: { active_destination: "trades" } %>
  </header>

  <div id="viewport" class="flex flex-1 overflow-hidden relative">
    <main id="maincanvas" class="flex-1 min-w-0 min-h-0 overflow-y-auto overflow-x-hidden bg-background relative overscroll-y-contain scroll-touch isolate">
      <%= render partial: "trades/results" %>
    </main>

    <aside
      id="rightpanel"
      class="w-[30%] min-w-[320px] max-w-[480px] border-l border-border bg-background overflow-hidden relative"
    >
      <div
        id="rightpanel-base-layer"
        class="absolute inset-0 overflow-y-auto overflow-x-hidden overscroll-y-contain scroll-touch pt-2 px-4 pb-4 transition-opacity duration-300"
      >
        <%= render partial: "trades/rightpanel_base" %>
      </div>

      <%= render partial: "trades/rightpanel_clear" %>
    </aside>
  </div>
</div>
